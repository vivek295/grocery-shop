<% provide(:title, 'Signup') %>

<div class="register-section container col-md-12">

<h1> Sign Up on KiranaStore </h1>

	<div class="left-section col-md-6">

		<%= form_for @user, url: user_registration_path do |f| %>
			<%= devise_error_messages! %>

			<div class = 'col-md-11'>
				<%= f.label :email %>
			</div>
			<div class = 'col-md-11'>
				<%= f.email_field :email, autofocus: true, placeholder: 'email', class: "form-control", onblur: 'validate_email(this.id)' %>
			</div>
			<div class = 'col-md-1' id = 'err_user_email'>
			</div>

			<div class = 'col-md-11'>
				<%= f.label :password %>
			</div>
			<div class = 'col-md-11'>
				<%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: "form-control", onblur: 'validate_password(this.id)'%>
			</div>
			<div class = 'col-md-1' id = 'err_user_password'>
			</div>

			<div class = 'col-md-11'>
				<%= f.label :password_confirmation %>
			</div>
			<div class = 'col-md-11'>
				<%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off", class: "form-control", onblur: 'validate_password_confirmation(this.id)'%>
			</div>
			<div class = 'col-md-1' id = 'err_user_password_confirmation'>
			</div>

			<div class = 'col-md-11'>
				<%= f.label :role, "Customer" %>
		    <%= f.radio_button :role, 'customer', checked: true %>
		    <%= f.label :role, "Shopkeeper" %>
		    <%= f.radio_button :role, 'shopkeeper' %>
		  </div>

		  <div class = 'col-md-11'>
				<%= f.submit 'Create Account', class: "login-button" %>
			</div>
		<% end %>
		
	</div>

	<div class="right-section col-md-6">
		<h4 class="mb20"> You will love to shop with us </h4>
			<p>- Wide selection of products </p>
			<p>- Quality and service you'll love </p>
			<p>- On time delivery guarantee </p>
			<hr>
			<p> Already having an Account <%= link_to 'Just Sign In!', new_user_session_path %> </p>
			<p> <%= link_to 'Didnt Recieve Confirmation Instructions?', new_user_confirmation_path %> </p>
      <p> <%= link_to 'Didnt receive unlock instructions?', new_user_unlock_path %> </p>
	</div>

</div>