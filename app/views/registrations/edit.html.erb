<% provide(:title, 'Edit') %>

<div class = 'register-section container'>

<h1> Edit </h1>

	<div class="col-md-6 col-md-offset-3">

		<%= form_for @user, url: { controller: :registrations, action: :update } do |f| %>
			<%= render 'error_messages' %>
	
			<%= fields_for :user_profile, @user.user_profile do |builder| %>	
				<%= render partial: 'shared/user_profile_form', locals: { f: builder } %>
			<% end %>	

			<div class = 'col-md-11'>
				<%= f.label :current_password %>
				<span class = 'asterisk'>*</span>
			</div>
			<div class = 'col-md-11'>
				<%= f.password_field :current_password, placeholder: 'Current Password', autocomplete: "off", class: "form-control", onblur: 'validate_password(this.id)'%>
			</div>
			<div class = 'col-md-1' id = 'err_user_current_password'>
		  </div>

		  <div class = 'col-md-11'>
				<%= f.label :new_password %>
			</div>
			<div class = 'col-md-11'>
				<%= f.password_field :password, placeholder: 'New Password', autocomplete: "off", class: "form-control", onblur: 'validate_password(this.id)'%>
			</div>
			<div class = 'col-md-1' id = 'err_user_password'>
		  </div>

		  <div class = 'col-md-11'>
				<%= f.label :password_confirmation %>
			</div>
			<div class = 'col-md-11'>
				<%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off", class: "form-control", onblur: 'validate_password_confirmation(this.id)'%>
			</div>
			<div class = 'col-md-1' id = 'err_user_password_confirmation'>
		  </div>

		  <div class = 'col-md-11'>
				<%= f.button 'Update Account', class: "btn btn-primary" %>
			</div>			
		<% end %>

		<div class = 'col-md-11'>
			<%= render "devise/shared/links" %>
		</div>
		
	</div>
	
</div>