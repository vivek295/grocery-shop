<% provide(:title, 'Signin/Signup') %>

  <section id="form"><!--form-->
    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
          <div class="login-form"><!--login form-->
            <h2>Login to your account</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.email_field :email, autofocus: true, placeholder: 'Email', id: 'user_email_login' %>
              <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" , id: 'user_password_login' %>
              <span>
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me ,class: "checkbox"%>
                  Remember me
                <% end %>
              </span>
              <%= f.button 'Login',type: :submit %>
            <% end %>
            <div>
              <%= link_to 'Forgot Password ?', new_user_password_path %>
            </div>
            <div>
              <%= link_to "Didn't Receive Unlock Instructions?", new_user_unlock_path %>
            </div>
            <div>
              <%= link_to "Didn't Recieve Confirmation Instructions?", new_user_confirmation_path %>
            </div> 
          </div><!--/login form-->
        </div>
        <div class="col-sm-1">
          <h2 class="or">OR</h2>
        </div>
        <div class="col-sm-5">
          <div class="signup-form"><!--sign up form-->
            <div class = "col-sm-10">
              <h2>New User Signup!</h2>
            </div>
            <%= form_for @user, url: user_registration_path do |f| %>
            <div class = "col-sm-10">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email', onblur: 'validate_email(this.id)' %>
            </div>
            <div class = 'col-md-1' id = 'err_user_email'></div>
            <div class = "col-sm-10">
              <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", onblur: 'validate_password(this.id)'%>
            </div>
            <div class = 'col-md-1' id = 'err_user_password'></div>
            <div class = "col-md-10" >
              <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off", onblur: 'validate_password_confirmation(this.id)'%>
            </div>
            <div class = 'col-md-1' id = 'err_user_password_confirmation'></div>
              <div class = "col-sm-10">
                <div class = "radiobuttons col-sm-12">
                  <div class ="col-sm-6">
                      Customer
                      <%= f.radio_button :role, 'customer', checked: true, class: 'radiobutton radio' %>
                  </div>
                  <div class ="col-sm-6">
                      Shopkeeper
                      <%= f.radio_button :role, 'shopkeeper', class: 'radiobutton radio' %>
                  </div>
                </div>
              </div>
              <div class = "col-md-10">
                <%= f.button 'Create Account',type: :submit %>
              </div>
            <% end %>
          </div><!--/sign up form-->
        </div>
      </div>
    </div>
  </section><!--/form-->