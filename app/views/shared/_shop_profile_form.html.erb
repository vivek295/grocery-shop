<div class = 'col-md-11'>
	<%= f.label :shop_name %>
	<span class = 'asterisk'>*</span>
</div>
<div class = 'col-md-11'>
	<%= f.text_field :shop_name, placeholder: 'Shop Name', autofocus: true, class: "form-control", onblur: 'validate_shop_name(this.id)' %>
</div>
<div class= 'col-md-1' id = 'err_shop_profile_shop_name'>
</div>

<div class = 'col-md-11'>
	<%= f.label :phone_number %>
	<span class = 'asterisk'>*</span>
</div>
<div class = 'col-md-11'>
	<%= f.text_field :phone_number, placeholder: 'Phone Number', class: "form-control", onblur: 'validate_phone_number(this.id)' %>
</div>
<div class= 'col-md-1' id = 'err_shop_profile_phone_number'>
</div>

<div class = 'col-md-11'>
	<%= f.label :email %>
</div>
<div class = 'col-md-11'>
	<%= f.email_field :email, placeholder: 'email', class: "form-control", onblur: 'validate_email(this.id)' %>
</div>
<div class= 'col-md-1' id = 'err_shop_profile_email'>
</div>

<%= fields_for :address, @shop.address do |builder| %>
	<%= render partial: 'shared/address_form', locals: { f: builder } %>
<% end %>
